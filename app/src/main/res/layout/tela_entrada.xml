<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vermelho"
    tools:context=".PrimeiraTela">

    <ImageView
        android:id="@+id/logoAmbev"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo_vermelho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/entrar_no_bar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Entrar no bar"
        app:layout_constraintEnd_toEndOf="@+id/logoAmbev"
        app:layout_constraintStart_toStartOf="@+id/logoAmbev"
        app:layout_constraintTop_toBottomOf="@+id/logoAmbev" />

    <Button
        android:id="@+id/meu_perfil"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Meu perfil"
        app:layout_constraintEnd_toEndOf="@+id/entrar_no_bar"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/entrar_no_bar"
        app:layout_constraintTop_toBottomOf="@+id/entrar_no_bar" />

    <Button
        android:id="@+id/login_logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Login/Logout"
        app:layout_constraintEnd_toEndOf="@+id/meu_perfil"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/meu_perfil"
        app:layout_constraintTop_toBottomOf="@+id/meu_perfil" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoAmbev"
        app:srcCompat="@drawable/ic_ambev_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>